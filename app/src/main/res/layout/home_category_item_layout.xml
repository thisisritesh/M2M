<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/category_bg">

    <ImageView
        android:id="@+id/category_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/app_name" />

    <com.morning2morning.android.m2m.utils.customviews.RegularTextView
        android:id="@+id/category_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Category name"
        android:textColor="@color/category_item_text_color"
        app:layout_constraintEnd_toEndOf="@+id/category_image_view"
        app:layout_constraintStart_toStartOf="@+id/category_image_view"
        app:layout_constraintTop_toBottomOf="@+id/category_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>